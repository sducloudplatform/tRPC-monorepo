{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/user/user",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/orders/orders",
			"style": {
				"navigationBarTitleText": "订单"
			}
		},
		{
			"path": "pages/messages/messages",
			"style": {
				"navigationBarTitleText": "消息"
			}
		},
		{
			"path": "pages/create/create",
			"style": {
				"navigationBarTitleText": "新建订单"
			}
		},
		{
			"path": "pages/login/login_wx",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/login/login_password",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/login/login_phone",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/user/profiles",
			"style": {
				"navigationBarTitleText": "个人信息"
			}
		},
		{
			"path": "pages/register/register",
			"style": {
				"navigationBarTitleText": "注册"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#27ba9b",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"selectedColor": "#27ba9b",
		"borderStyle": "white",
		"backgroundColor": "#ffffff",
		"list": [
			{
				"pagePath": "pages/index/index",
				"text": "首页",
				"iconPath": "static/tabbar/index/list-bullets.png",
				"selectedIconPath": "static/tabbar/index/list-bullets-active.png"
			},
			{
				"pagePath": "pages/orders/orders",
				"text": "订单",
				"iconPath": "static/tabbar/orders/orders.png",
				"selectedIconPath": "static/tabbar/orders/orders-active.png"
			},
			{
				"pagePath": "pages/create/create",
				"text": "新建订单",
				"iconPath": "static/tabbar/create/plus-circle.png",
				"selectedIconPath": "static/tabbar/create/plus-circle-active.png"
			},
			{
				"pagePath": "pages/messages/messages",
				"text": "消息",
				"iconPath": "static/tabbar/messages/chats.png",
				"selectedIconPath": "static/tabbar/messages/chats-active.png"
			},
			{
				"pagePath": "pages/user/user",
				"text": "我的",
				"iconPath": "static/tabbar/user/user.png",
				"selectedIconPath": "static/tabbar/user/user-active.png"
			}
		]
	}
}